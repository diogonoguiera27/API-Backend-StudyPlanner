{
  
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "types": ["node"],
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**.d.ts", "node_modules"],
  "lib": ["es2020"]

}
